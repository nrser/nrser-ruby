{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RSpec Described - Next Failure",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/dev/bin/rspec",
      "args": [
        "--require",
        "${workspaceRoot}/spec/support/described.rb",
        "--next-failure",
      ],
      "useBundler": true,
      "env": {
        "VSCODE_RUBY_DEBUG": "TRUE",
      }
    },
    
    {
      "name": "Cucumber File",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/dev/bin/cucumber",
      "args": [ "--fail-fast", "${file}" ],
      "useBundler": true,
      "env": {
        "VSCODE_RUBY_DEBUG": "TRUE",
      }
    },
    
    {
      "name": "Cucumber File @focus",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/dev/bin/cucumber",
      "args": [ "--fail-fast", "${file}", "--tags", "@focus" ],
      "useBundler": true,
      "env": {
        "VSCODE_RUBY_DEBUG": "TRUE",
      }
    },
    
    {
      "name": "Cucumber @focus",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/dev/bin/cucumber",
      "args": [ "--fail-fast", "--tags", "@focus" ],
      "useBundler": true,
      "env": {
        "VSCODE_RUBY_DEBUG": "TRUE",
      }
    },
    
    {
      "name": "Cucumber Last Failed File",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/dev/bin/cucumber",
      "args": [ "--fail-fast", "--last-failed-file" ],
      "useBundler": true,
      "env": {
        "VSCODE_RUBY_DEBUG": "TRUE",
      }
    },
    
    {
      "name": "Cucumber",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/dev/bin/cucumber",
      "args": [ "--fail-fast" ],
      "useBundler": true,
      "env": {
        "VSCODE_RUBY_DEBUG": "TRUE",
      }
    }
  ]
}