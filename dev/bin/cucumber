#!/usr/bin/env ruby
# frozen_string_literal: true

#
# This file was generated by Bundler.
#
# The application 'cucumber' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require "pathname"
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../../Gemfile",
  Pathname.new(__FILE__).realpath)

bundle_binstub = File.expand_path("../bundle", __FILE__)

if File.file?(bundle_binstub)
  if File.read(bundle_binstub, 300) =~ /This file was generated by Bundler/
    load(bundle_binstub)
  else
    abort("Your `bin/bundle` was not generated by Bundler, so this binstub cannot run.
Replace `bin/bundle` by running `bundle binstubs bundler --force`, then run this command again.")
  end
end

require "rubygems"
require "bundler/setup"

# Edits
# ============================================================================

require 'pathname'

gemroot = Pathname.new( __dir__ ).join( '../..' ).expand_path

relative_path_for = ->( gemroot_relative_path ) {
  gemroot.
    join( gemroot_relative_path ).
    relative_path_from( Pathname.getwd ).to_s
}

arg_aliases = {
  '--desc' => 'features/lib/nrser/described',
}

if ARGV.length == 0
  # Run everything when ARGV is empty
  ARGV[0] = relative_path_for.call 'features'
  
else
  ARGV.each_with_index { |arg, index|
    if ( gemroot_relative_path = arg_aliases[ arg ] )
      ARGV[ index ] = relative_path_for.call gemroot_relative_path
      puts "EXPANDED arg alias: #{ arg } => #{ ARGV[ index ] }\n\n"
    end
  }
  
end

# END Edits ******************************************************************

load Gem.bin_path("cucumber", "cucumber")
